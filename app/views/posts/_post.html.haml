= turbo_frame_tag dom_id(post) do
  %p.callout
    %b Title:
    %mark= post.title
    \|
    %b Body:
    %mark= post.body
    \|
    %b Published:
    %mark= post.published
    = link_to 'Show', post, data: { turbo_frame: "_top" }
    = link_to 'Edit', edit_post_path(post)
    = link_to 'Delete', post, data: { turbo_method: :delete }
